/* pages/pay/pay.wxss */
/* 页面整体容器样式 */
.page-container {
    padding: 30rpx 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  /* 订单信息容器样式 */
  .order-info {
    background-color: #ffffff;
    padding: 30rpx;
    border-radius: 16rpx;
    margin-bottom: 60rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 订单信息项样式 */
  .info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  /* 最后一个信息项去掉下边框 */
  .info-item:last-child {
    border-bottom: none;
  }
  
  /* 标签文字样式 */
  .label {
    font-size: 28rpx;
    color: #333333;
  }
  
  /* 普通值文字样式 */
  .value {
    font-size: 28rpx;
    color: #666666;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  /* 金额文字样式 */
  .amount {
    font-size: 32rpx;
    color: #e53e3e;
    font-weight: bold;
  }
  
  /* 支付按钮样式 */
  .pay-button {
    width: 90%;
    height: 88rpx;
    line-height: 88rpx;
    margin: 0 auto;
    border-radius: 44rpx;
    background-color: #07c160;
    color: #ffffff;
    font-size: 32rpx;
  }
  
  /* 提示文字样式 */
  .tip-text {
    font-size: 24rpx;
    color: #999999;
    text-align: center;
    margin-top: 40rpx;
    line-height: 40rpx;
  }